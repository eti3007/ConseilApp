@model ConseilApp.Models.LoginModel

@{
    ViewBag.Title = "Authentifiez vous avec votre compte local";
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
</hgroup>

<section id="loginForm">

<h2></h2>

@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset class="form-horizontal">
        <legend>Connectez vous !</legend>
        <div class="control-group">
            @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
            <div class="controls">
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
            <div class="controls">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>

        <div class="control-group">
                @Html.LabelFor(m => m.RememberMe, new { @class = "control-label" })
            <div class="controls">
                @Html.CheckBoxFor(m => m.RememberMe)
            </div>
        </div>

        <div style="max-width:300px;margin-bottom:30px">
            <input type="submit" value="Log in" class="btn btn-large btn-success btn-block" />
        </div>

        <blockquote>@Html.ActionLink("Enregistrez-vous", "Register") si vous n'avez pas de compte.</blockquote>
    </fieldset>
    
}
</section>

