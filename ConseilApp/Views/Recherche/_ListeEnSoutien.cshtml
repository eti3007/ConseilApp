@model ConseilApp.Models.Recherche.RechercheModel

@if (Model.deuxiemeListe.proposeAide != null)
{
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <td>Pseudo</td>
                <td>Nb photo habillé</td>
                <td>Nb aide proposé</td>
                <td>Nb habillage proposé</td>
                <td>:) / :(</td>
                <td>Genre</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model.deuxiemeListe.proposeAide)
            {
                <tr>
                    <!-- Conseillers qui peuvent aider -->
                    <td>@i.pseudo</td>
                    <td>@i.nbPhotoHabille</td>
                    <td>@i.nbAide</td>
                    <td>@i.nbHabPropose</td>
                    <td>@i.note</td>
                    <td>@i.genre</td>
                </tr>
            }
        </tbody>
    </table>
}
else if (Model.deuxiemeListe.solliciteAide != null)
{
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <td>Pseudo</td>
                <td>Nb photo vêtement</td>
                <td>Nb photo habillé</td>
                <td>Genre</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model.deuxiemeListe.solliciteAide)
            {
                <tr>
                    <!-- Conseillers qui peuvent aider -->
                    <td>@i.pseudo</td>
                    <td>@i.nbPhotoVetement</td>
                    <td>@i.nbPhotoHabille</td>
                    <td>@i.genre</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{ <text>Aucune information !</text> }