<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Fringue conseil</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />

@*        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/vendor")
        
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/vendor")*@

        @Styles.Render("~/Bootstrap/css")        
        @Scripts.Render("~/Bootstrap/jquery")
        @Scripts.Render("~/Bootstrap/bootstrap")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("your logo here", "Index", "Home")</p>
                    <p class="site-StyleList">@Html.Partial("_ListStylePartial")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
    <div id="body" class="container-fluid">
        <div class="row-fluid">
            <div class="span2">
                <!--Sidebar content-->
            </div>
            <div class="span10">
                @RenderSection("featured", required: false)
                <section>@RenderBody()</section>
            </div>
        </div>
    </div>
@*        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>*@
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>

         
        @Scripts.Render("~/Bootstrap/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>