@if (Request.IsAuthenticated) {
    @Html.Action("ListeStyle", "Liste");
}


<script type="text/javascript">
    $(function () {
        $('select#Style option').each(function () {
            $(this).on("click", function () {
                var url = '@Url.Action("MajStyleEnCours", "Liste")';
                var val = $(this).val();
                var page = '@ViewBag.Page';
                var resultat = "";

                $.ajax({
                    url: url,
                    type: "GET",
                    data: { id: val }
                })
                .done(function (reponse) {
                    resultat = reponse;
                });

                if (resultat == "ok") { CreateMenu("/Home/Menu", page); }


                //if (resultat == "ok" && $('#dvMenu') != undefined) {
