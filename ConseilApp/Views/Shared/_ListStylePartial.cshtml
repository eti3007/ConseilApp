@if (Request.IsAuthenticated) {
    @Html.Action("ListeStyle", "Liste");
}


<script type="text/javascript">
    $(function () {
        $('select#Style option').each(function () {
            $(this).on("click", function () {
                var url = '@Url.Action("MajStyleEnCours", "Liste")';
                var val = $(this).val();
                var page = '@ViewBag.Page';
                var resultat = "";
                if (val != undefined && page != undefined) {
                    $.ajax({
                        type: "POST",
                        url: url,
                        data: { id: val, page: page }
                    });
                }
            });
        });
    });
</script>